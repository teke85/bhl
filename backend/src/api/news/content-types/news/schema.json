{
  "kind": "collectionType",
  "collectionName": "news_type",
  "info": {
    "singularName": "news",
    "pluralName": "news-type",
    "displayName": "news"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "blocks",
      "required": true
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "author": {
      "type": "string"
    },
    "publishedDate": {
      "type": "date",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Project Update",
        "Press Release",
        "Announcement",
        "Community"
      ]
    },
    "tags": {
      "type": "json"
    }
  }
}
